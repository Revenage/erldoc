				"p": [
					{
						"em": "Example 1"
					},
					"The following example shows how to print \"Hello World!\" in 5 seconds:",
					{
						"em": "Example 2"
					},
					"The following example shows a process performing a certain action, and if this action is not completed within a certain limit, the process is killed:"
				],
				"pre": {
					"input": "timer:apply_after(5000, io, format, [\"~nHello World!~n\", []])."
				},
				"code": {
					"type": "none",
					"$t": "Pid = spawn(mod, fun, [foo, bar]),%% If pid is not finished in 10 seconds, kill him{ok, R} = timer:kill_after(timer:seconds(10), Pid),...%% We change our mind...timer:cancel(R),..."
				}
